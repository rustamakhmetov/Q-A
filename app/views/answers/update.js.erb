$("p.alert").html('');
$("p.notice").html('');

<% flash.each do |type, message| %>
  $("#flash_messages").html("<%= type.to_s.humanize %>: <%= message.html_safe %>");
<% end %>

<% if @answer.errors.empty? %>
  $("#answer<%= @answer.id %>").html("<%= j render @answer %>");
  $("#edit_answer_<%= @answer.id %>").hide();
<% end %>